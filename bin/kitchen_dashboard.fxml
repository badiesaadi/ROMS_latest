<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KitchenDashboardController">
   <tabs>
      <!-- Orders Tab -->
      <Tab closable="false" text="Orders">
         <content>
            <VBox spacing="10">
               <children>
                  <TableView fx:id="ordersTable">
                     <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="100" text="Order ID" />
                        <TableColumn fx:id="orderDateColumn" prefWidth="150" text="Date" />
                        <TableColumn fx:id="orderItemsColumn" prefWidth="200" text="Items" />
                        <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                        <TableColumn fx:id="actionsColumn" prefWidth="150" text="Actions" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="10">
                     <children>
                        <Label fx:id="selectedOrderIdLabel" text="Order: None" />
                        <ComboBox fx:id="statusComboBox" onAction="#handleStatusFilter" prefWidth="150" />
                     </children>
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </content>
      </Tab>

      <!-- Inventory Tab -->
      <Tab closable="false" disable="true">
         <content>
            <VBox spacing="10">
               <children>
                  <TableView fx:id="inventoryTable">
                     <columns>
                        <TableColumn fx:id="ingredientIdColumn" prefWidth="100" text="ID" />
                        <TableColumn fx:id="ingredientNameColumn" prefWidth="150" text="Name" />
                        <TableColumn fx:id="quantityColumn" prefWidth="100" text="Quantity" />
                        <TableColumn fx:id="unitColumn" prefWidth="100" text="Unit" />
                        <TableColumn fx:id="minQuantityColumn" prefWidth="100" text="Min Quantity" />
                        <TableColumn fx:id="categoryColumn" prefWidth="100" text="Category" />
                        <TableColumn fx:id="inventoryActionsColumn" prefWidth="150" text="Actions" />
                     </columns>
                  </TableView>
                  <VBox fx:id="lowStockContainer" spacing="5" />
                  <VBox spacing="10">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Add/Edit Ingredient" />
                        <HBox spacing="10">
                           <children>
                              <Label text="Name:" />
                              <TextField fx:id="ingredientNameField" prefWidth="150" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Quantity:" />
                              <TextField fx:id="quantityField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Min Quantity:" />
                              <TextField fx:id="minQuantityField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Unit:" />
                              <TextField fx:id="unitField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Category:" />
                              <ComboBox fx:id="ingredientCategoryComboBox" prefWidth="150" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Button fx:id="addIngredientButton" text="Add Ingredient" />
                              <Button fx:id="updateIngredientButton" disable="true" text="Update Ingredient" />
                              <Button fx:id="clearIngredientFormButton" text="Clear Form" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
