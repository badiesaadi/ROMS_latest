<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<TabPane fx:controller="KitchenDashboardController" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <tabs>
      <!-- Orders Tab -->
      <Tab text="Orders" closable="false">
         <content>
            <VBox spacing="10">
               <children>
                  <TableView fx:id="ordersTable">
                     <columns>
                        <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="100" />
                        <TableColumn fx:id="orderDateColumn" text="Date" prefWidth="150" />
                        <TableColumn fx:id="orderItemsColumn" text="Items" prefWidth="200" />
                        <TableColumn fx:id="deliveryPartnerColumn" text="Manager" prefWidth="150" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
                     </columns>
                  </TableView>
                  <HBox spacing="10" alignment="CENTER">
                     <children>
                        <Label fx:id="selectedOrderIdLabel" text="Order: None" />
                        <ComboBox fx:id="statusComboBox" prefWidth="150" onAction="#handleStatusFilter" />
                     </children>
                     <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10" />
               </padding>
            </VBox>
         </content>
      </Tab>

      <!-- Inventory Tab -->
      <Tab text="Inventory"  closable="false">
         <content>
            <VBox spacing="10">
               <children>
                  <TableView fx:id="inventoryTable">
                     <columns>
                        <TableColumn fx:id="ingredientIdColumn" text="ID" prefWidth="100" />
                        <TableColumn fx:id="ingredientNameColumn" text="Name" prefWidth="150" />
                        <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100" />
                        <TableColumn fx:id="unitColumn" text="Unit" prefWidth="100" />
                        <TableColumn fx:id="minQuantityColumn" text="Min Quantity" prefWidth="100" />
                        <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100" />
                        <TableColumn fx:id="inventoryActionsColumn" text="Actions" prefWidth="150" />
                     </columns>
                  </TableView>
                  <VBox fx:id="lowStockContainer" spacing="5" />
                  <VBox spacing="10">
                     <children>
                        <Label text="Add/Edit Ingredient" style="-fx-font-weight: bold;" />
                        <HBox spacing="10">
                           <children>
                              <Label text="Name:" />
                              <TextField fx:id="ingredientNameField" prefWidth="150" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Quantity:" />
                              <TextField fx:id="quantityField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Min Quantity:" />
                              <TextField fx:id="minQuantityField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Unit:" />
                              <TextField fx:id="unitField" prefWidth="100" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Label text="Category:" />
                              <ComboBox fx:id="ingredientCategoryComboBox" prefWidth="150" />
                           </children>
                        </HBox>
                        <HBox spacing="10">
                           <children>
                              <Button fx:id="addIngredientButton" text="Add Ingredient" />
                              <Button fx:id="updateIngredientButton" text="Update Ingredient" disable="true" />
                              <Button fx:id="clearIngredientFormButton" text="Clear Form" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets top="10" right="10" bottom="10" left="10" />
               </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>