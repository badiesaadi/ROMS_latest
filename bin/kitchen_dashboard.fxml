<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KitchenDashboardController">
   <tabs>
      <!-- Orders Tab -->
      <Tab closable="false" text="Orders">
         <content>
            <VBox spacing="10">
               <children>
                  <TableView fx:id="ordersTable">
                     <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="100" text="Order ID" />
                        <TableColumn fx:id="orderDateColumn" prefWidth="150" text="Date" />
                        <TableColumn fx:id="orderItemsColumn" prefWidth="200" text="Items" />
                        <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
                        <TableColumn fx:id="actionsColumn" prefWidth="150" text="Actions" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="10">
                     <children>
                        <Label fx:id="selectedOrderIdLabel" text="Order: None" />
                        <ComboBox fx:id="statusComboBox" onAction="#handleStatusFilter" prefWidth="150" />
                     </children>
                     <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
