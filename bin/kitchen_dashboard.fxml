<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane style="-fx-background-color: #1e1e2e; -fx-border-color: #313244; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="KitchenDashboardController">
   <tabs>
      <!-- Orders Tab -->
      <Tab closable="false" style="-fx-background-color: #313244;" text="Orders">
         <content>
            <VBox spacing="15" style="-fx-background-color: #1e1e2e;">
               <children>
                  <TableView fx:id="ordersTable" style="-fx-background-color: #181825; -fx-table-cell-border-color: #313244; -fx-selection-bar: #89b4fa; -fx-selection-bar-non-focused: #6c7086;">
                     <columns>
                        <TableColumn fx:id="orderIdColumn" prefWidth="120" style="-fx-background-color: #313244; -fx-text-fill: #cdd6f4;" text="Order ID" />
                        <TableColumn fx:id="orderDateColumn" prefWidth="170" style="-fx-background-color: #313244; -fx-text-fill: #cdd6f4;" text="Date" />
                        <TableColumn fx:id="orderItemsColumn" prefWidth="220" style="-fx-background-color: #313244; -fx-text-fill: #cdd6f4;" text="Items" />
                        <TableColumn fx:id="statusColumn" prefWidth="120" style="-fx-background-color: #313244; -fx-text-fill: #cdd6f4;" text="Status" />
                        <TableColumn fx:id="actionsColumn" prefWidth="170" style="-fx-background-color: #313244; -fx-text-fill: #cdd6f4;" text="Actions" />
                     </columns>
                  </TableView>
                  <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #313244; -fx-background-radius: 10;">
                     <children>
                        <Label fx:id="selectedOrderIdLabel" style="-fx-text-fill: #cdd6f4; -fx-font-size: 14px; -fx-font-weight: bold;" text="Order: None" />
                        <ComboBox fx:id="statusComboBox" onAction="#handleStatusFilter" prefWidth="180" style="-fx-background-color: #45475a; -fx-text-fill: #cdd6f4; -fx-border-color: #585b70; -fx-border-radius: 5; -fx-background-radius: 5;" />
                     </children>
                     <padding>
                        <Insets bottom="15" left="20" right="20" top="15" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20" left="20" right="20" top="20" />
               </padding>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>