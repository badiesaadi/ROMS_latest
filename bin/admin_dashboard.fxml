                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Feedback">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                       
                        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Feedback" />
                        <TableView fx:id="feedbackTable" prefHeight="200.0" prefWidth="200.0">
                           <columns>
                              <TableColumn fx:id="feedbackIdColumn" prefWidth="75.0" text="ID" />
                              <TableColumn fx:id="customerNameColumn" prefWidth="150.0" text="Customer" />
                              <TableColumn fx:id="ratingColumn" prefWidth="100.0" text="Rating" />
