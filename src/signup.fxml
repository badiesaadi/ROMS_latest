<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="staff-login-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignupController">
   <center>
      <VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="subtitle-label" text="Sign up to manage your restaurant">
               <font>
                  <Font name="MADE Tommy Soft" size="18.0" />
               </font>
            </Label>
            <VBox alignment="CENTER" prefWidth="350.0" spacing="20.0" styleClass="login-form">
               <children>
                  <Label styleClass="input-label" text="Username">
                     <font>
                        <Font name="MADE Tommy Soft" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefWidth="300.0" promptText="Enter username" styleClass="input-field" />
                  <Label styleClass="input-label" text="Password">
                     <font>
                        <Font name="MADE Tommy Soft" size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="passwordField" prefWidth="300.0" promptText="Enter password" styleClass="input-field" />
                    <Label fx:id="statusLabel" textFill="RED" visible="false" />
                    <Button onAction="#handleSignup" text="Sign Up">
                     <font>
                        <Font name="MADE Tommy Soft" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="loginButton" onAction="#handleLogin" text="log in">
                     <font>
                        <Font name="MADE Tommy Soft" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
