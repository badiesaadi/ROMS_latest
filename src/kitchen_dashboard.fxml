<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<TabPane fx:controller="KitchenDashboardController" xmlns:fx="http://javafx.com/fxml">
   <tabs>
      <Tab text="Orders" closable="false">
         <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="ordersTable" prefHeight="400">
               <columns>
                  <TableColumn fx:id="orderIdColumn" text="Order ID" prefWidth="75"/>
                  <TableColumn fx:id="orderDateColumn" text="Date" prefWidth="150"/>
                  <TableColumn fx:id="orderItemsColumn" text="Items" prefWidth="300"/>
                  <TableColumn fx:id="deliveryPartnerColumn" text="Delivery Partner" prefWidth="100"/>
                  <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                  <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100"/>
               </columns>
            </TableView>
            <HBox spacing="10">
               <Label fx:id="selectedOrderIdLabel" text="Selected Order: None"/>
               <ComboBox fx:id="statusComboBox" promptText="Select Status"/>
               <Button fx:id="updateOrderButton" text="Update Order" onAction="#handleUpdateOrder"/>
               <Button fx:id="refreshOrdersButton" text="Refresh Orders" onAction="#handleRefreshOrders"/>
            </HBox>
         </VBox>
      </Tab>
      <Tab text="Inventory" closable="false">
         <VBox spacing="10" style="-fx-padding: 10;">
            <TableView fx:id="inventoryTable" prefHeight="400">
               <columns>
                  <TableColumn fx:id="ingredientIdColumn" text="ID" prefWidth="50"/>
                  <TableColumn fx:id="ingredientNameColumn" text="Name" prefWidth="150"/>
                  <TableColumn fx:id="quantityColumn" text="Quantity" prefWidth="100"/>
                  <TableColumn fx:id="unitColumn" text="Unit" prefWidth="75"/>
                  <TableColumn fx:id="minQuantityColumn" text="Min Quantity" prefWidth="100"/>
                  <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
                  <TableColumn fx:id="inventoryActionsColumn" text="Actions" prefWidth="150"/>
               </columns>
            </TableView>
            <HBox spacing="10">
               <VBox spacing="5">
                  <Label text="Ingredient Name"/>
                  <TextField fx:id="ingredientNameField"/>
                  <Label text="Quantity"/>
                  <TextField fx:id="quantityField"/>
                  <Label text="Minimum Quantity"/>
                  <TextField fx:id="minQuantityField"/>
                  <Label text="Unit"/>
                  <TextField fx:id="unitField"/>
                  <Label text="Category"/>
                  <ComboBox fx:id="ingredientCategoryComboBox" promptText="Select Category"/>
                  <HBox spacing="5">
                     <Button fx:id="addIngredientButton" text="Add Ingredient" onAction="#handleAddIngredient"/>
                     <Button fx:id="updateIngredientButton" text="Update Ingredient" onAction="#handleUpdateIngredient"/>
                     <Button fx:id="clearIngredientFormButton" text="Clear Form" onAction="#handleClearIngredientForm"/>
                  </HBox>
               </VBox>
               <VBox fx:id="lowStockContainer" spacing="5">
                  <Label text="Low Stock Notifications"/>
               </VBox>
            </HBox>
            <Button text="Back to Customer View" onAction="#handleBackToCustomerView"/>
            <Button text="Logout" onAction="#handleLogout"/>
         </VBox>
      </Tab>
   </tabs>
</TabPane>